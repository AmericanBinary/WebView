<Window x:Class="WebViewExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebViewExample"
        xmlns:wvc="clr-namespace:WebViewControl;assembly=WebViewControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <DockPanel x:Name="panel">
        <Button Click="Button_Click">Click</Button>
        <Label PreviewMouseLeftButtonDown="Label_PreviewMouseLeftButtonDown">Drag me</Label>
        <!--<wvc:ReactView x:Name="reactView" Source="ResourcesExample/dist/example.js"/>-->
        <wvc:WebView x:Name="webview" Address="ResourcesExample/test.html?size=16" AllowDrop="True" />
    </DockPanel>
</Window>
