<Project>
  <PropertyGroup>

    <CompileDependsOn>
      GenerateBundle;
      $(CompileDependsOn);
    </CompileDependsOn>
      
    <BuildDependsOn>
      GenerateView;
      $(BuildDependsOn)
    </BuildDependsOn>

    <CleanDependsOn>
      CleanLegacyJSFiles;
      CleanGenerated;
      $(CleanDependsOn);
    </CleanDependsOn>

    <!-- If don't exist, create so that the targets won't fail -->
    <TransformDuringBuild>
      $(TransformDuringBuild)
    </TransformDuringBuild>

  </PropertyGroup>

  <Target Name="CleanLegacyJSFiles" >
    <ItemGroup>
      <JSFilesToDelete Include="**\*.js" Exclude="node_modules\**\*.js"/>
    </ItemGroup>
    <Message Text="Deleting old files: @(JSFilesToDelete)" Importance="high" />
    <Delete Files="@(JSFilesToDelete)"/>
  </Target>
    
  <Target Name="GenerateBundle" DependsOnTargets="Delegate_SassCompile">
    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <WebpackBuildMode>development</WebpackBuildMode>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <WebpackBuildMode>production</WebpackBuildMode>
    </PropertyGroup>

      <Exec Command="&quot;$(ViewGeneratorNodeJsExe)&quot; &quot;$(MSBuildThisFileDirectory)..\tools\node_modules\webpack\bin\webpack.js&quot; --config &quot;$(MSBuildThisFileDirectory)..\tools\webpack.config.js&quot; --mode $(WebpackBuildMode)" />
  </Target>
  
  <Target Name="GenerateView" BeforeTargets="TransformDuringBuild;PrepareForBuild;CoreCompile" DependsOnTargets="CleanGenerated;GenerateBundle">
    <Message Importance="Normal" Text="Generating View files" />
    <Exec Command="&quot;$(ViewGeneratorNodeJsExe)&quot; &quot;$(MSBuildThisFileDirectory)..\tools\node_modules\@outsystems\ts2lang\ts2lang-main.js&quot; -f &quot;$(MSBuildProjectDirectory)\ts2lang.json&quot; -t &quot;$(MSBuildThisFileDirectory)..\tools\ViewGenerator.js&quot;" />
  </Target>

  <Target Name="IncludeGeneratedFiles" BeforeTargets="PrepareForBuild;CoreCompile">
    <ItemGroup>
      <Compile Include="$(ViewGeneratorGeneratedFolder)\**\*.cs" />
    </ItemGroup>
  </Target>
  
  <Target Name="CleanGenerated">
    <ItemGroup>
      <GeneratedTs2LangFiles Include="$(ViewGeneratorGeneratedFolder)\**\*.cs" />
    </ItemGroup>
    <Delete Files="@(GeneratedTs2LangFiles)"/>
  </Target>

</Project>